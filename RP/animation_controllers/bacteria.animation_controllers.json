{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.bacteria": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"walking": "query.ground_speed"
						},
						{
							"attack": "variable.attack_time > 0"
						}
					],
					"blend_transition": 0.4
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"idle": "!query.ground_speed"
						},
						{
							"attack": "variable.attack_time > 0"
						}
					],
					"blend_transition": 0.4
				},
				"attack": {
					"animations": [
						"attack"
					],
					"transitions": [
						{
							"idle": "!variable.attack_time"
						},
						{
							"walking": "query.ground_speed"
						}
					],
					"blend_transition": 0.4
				}
			}
		}
	}
}
